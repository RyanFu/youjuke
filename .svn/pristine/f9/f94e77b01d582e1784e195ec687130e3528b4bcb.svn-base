apply plugin: 'com.android.library'

android {
    compileSdkVersion 24
    buildToolsVersion '25.0.0'

    defaultConfig {
        minSdkVersion 14
        targetSdkVersion 24
        versionCode 1
        versionName "1.0"
    }
    buildTypes {
        release {
            minifyEnabled false
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-rules.pro'
        }
    }
}

dependencies {
    compile fileTree(include: ['*.jar'], dir: 'libs')
    testCompile 'junit:junit:4.12'
    //RX系列
    compile 'io.reactivex:rxandroid:1.2.1'
    compile 'io.reactivex:rxjava:1.1.6'
    compile 'com.squareup.retrofit2:retrofit:2.1.0'
    compile 'com.squareup.retrofit2:adapter-rxjava:2.1.0'
    compile 'com.squareup.retrofit2:converter-gson:2.1.0'
    //RxLifecycle 内存泄露
    compile 'com.trello:rxlifecycle-components:0.7.0'
    //glide图片加载库
    compile 'com.github.bumptech.glide:glide:3.7.0'
    //OkHttp
    compile 'com.squareup.okhttp3:okhttp:3.4.1'
    compile 'com.squareup.okhttp3:logging-interceptor:3.4.1'
    compile 'com.github.bumptech.glide:okhttp3-integration:1.4.0@aar'
    //Gson
    compile 'com.google.code.gson:gson:2.6.2'
    //腾讯TBS
    compile files('libs/tbs_sdk_thirdapp_v3.1.0.1034_43100_sharewithdownload_obfs_20170301_182143.jar')
    compile 'org.jetbrains:annotations-java5:15.0'
    //微信支付sdk
    compile files('libs/libammsdk.jar')
    //tabLayout
    compile 'com.flyco.tablayout:FlycoTabLayout_Lib:2.0.8@aar'
    //noinspection GradleCompatible
    compile 'com.android.support:design:24.2.0'
    compile 'com.android.support:appcompat-v7:24.2.0'
    compile 'com.android.support:support-v4:24.2.0'
    compile 'com.jude:easyrecyclerview:4.0.6'
    compile 'com.bigkoo:convenientbanner:2.0.5'
    compile files('libs/alipaySdk-20160825.jar')
    //noinspection GradleCompatible
    compile 'com.android.support:cardview-v7:25.0.0'
    compile files('libs/Baidu_Mtj_3.7.4.9.jar')
    //https://github.com/EverythingMe/overscroll-decor
    compile 'me.everything:overscroll-decor-android:1.0.3'
    //日期
    compile 'com.bigkoo:pickerview:2.1.1'
    //https://github.com/laobie/StatusBarUtil
    compile 'com.jaeger.statusbaruitl:library:1.3.2'
    //数字进度条
    compile 'com.daimajia.numberprogressbar:library:1.2@aar'
    //https://github.com/lovedise/PermissionGen android6.0权限请求  封装
    compile 'com.lovedise:permissiongen:0.0.6'
}
