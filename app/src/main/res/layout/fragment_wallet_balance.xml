<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_f0f0f0"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:src="@mipmap/btn_qbye" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="@string/wallet_balance"
        android:textColor="@color/back_333333"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/tv_money_balance"
        android:textColor="#e51717"
        android:textSize="35sp" />

    <Button
        android:layout_marginTop="38dp"
        android:layout_width="340dp"
        android:layout_height="42dp"
        android:textSize="18sp"
        android:id="@+id/btn_check_detail"
        android:background="@drawable/green_press_check"
        android:text="@string/check_detail"
        android:textColor="@color/back_ffffff" />

    <Button
        android:layout_width="340dp"
        android:layout_height="42dp"
        android:textSize="18sp"
        android:id="@+id/btn_advance"
        android:layout_marginTop="13dp"
        android:background="@drawable/white_stroke_press_box"
        android:text="@string/advance"
        android:textColor="@color/back_333333" />

</LinearLayout>