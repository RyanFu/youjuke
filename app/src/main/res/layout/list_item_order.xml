<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorTextWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="@string/order_time"
            android:textColor="@color/back_808080"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="2016-5-25  10:30:31"
            android:textColor="@color/back_808080"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:src="@mipmap/btn_delete2"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/back_f8f8f8">

        <ImageView
            android:id="@+id/img_order"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="17dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_order">

            <TextView
                android:id="@+id/title_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_order_no"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title_order_no"
                android:layout_toRightOf="@+id/title_order_no"
                android:text="1600054545545"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/title_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title_order_no"
                android:layout_below="@+id/title_order_no"
                android:layout_centerVertical="true"
                android:text="@string/title_order_status"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/order_no"
                android:layout_alignTop="@+id/title_order_status"
                android:layout_toRightOf="@+id/title_order_status"
                android:text="1600054545545"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/title_order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title_order_status"
                android:layout_below="@+id/title_order_status"
                android:layout_centerVertical="true"
                android:text="@string/title_order_money"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/order_status"
                android:layout_alignTop="@+id/title_order_money"
                android:layout_toRightOf="@+id/title_order_money"
                android:text="1600054545545"
                android:textSize="15sp"/>
            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="74dp"
                android:layout_height="14dp"
                android:textSize="11sp"
                android:visibility="gone"
                android:textColor="#dd2727"
                android:id="@+id/tv_prepare_price"
                android:gravity="center"
                android:layout_below="@id/order_money"
                android:background="@drawable/text_bacground_miaosha"
                android:text="已付定金¥10"/>
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <Button
            android:id="@+id/btn_order_list_do"
            android:layout_width="79dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_text_btn_red"
            android:text="@string/payment"
            android:textColor="@color/f22d2d"
            android:textSize="15sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/back_f0f2f5"/>
</LinearLayout>