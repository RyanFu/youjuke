<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/back_ffffff"
    android:layout_marginTop="1dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:gravity="center"
        android:text="第十五期"
        android:id="@+id/tv_num"
        android:textColor="#989898"
        android:textSize="12sp"
        android:ems="1"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e8ebec"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#989898"
            android:textSize="12sp"
            android:text="@string/current_rabate_money"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rebate_money" />
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e8ebec"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#989898"
                android:id="@+id/tv_rebate_time"
                android:textSize="12sp"
                tools:text="返利日期：2017.12.12"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="领取日期： ---------------"
                android:id="@+id/tv_get_time"
                android:layout_marginTop="10dp"
                android:textColor="#989898"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e8ebec"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tv_get_status"
            android:text=""
            android:drawableLeft="@mipmap/btn_ylq"
            android:textColor="#ff5200"
            android:drawablePadding="3dp"
            android:textSize="12dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/tv_get_status1"
            android:textColor="#fff"
            android:textSize="12dp"/>
    </LinearLayout>
</LinearLayout>