<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/back_f0f0f0">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/iv_no_detail"
        android:src="@mipmap/btn_no_order"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#b999"
        android:textSize="32sp"
        android:visibility="gone"
        android:id="@+id/tv_content_hint"
        android:gravity="center"
        android:layout_marginTop="29dp"
        android:text="暂无进账明细"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:id="@+id/rlv_recyclerView"
        android:visibility="gone"
        android:background="@android:color/transparent"></android.support.v7.widget.RecyclerView>

</LinearLayout>