<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/back_f0f0f0"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/home_me_color">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@mipmap/head_portrait"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_head"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"/>

        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:id="@+id/relativeLayout_message_num"
            android:layout_marginEnd="15dp"
            >
            <ImageView
                android:src="@mipmap/btn_grzxxxtx"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:scaleType="center"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:id="@+id/message_imageView" />
            <TextView
                android:id="@id/textView_message_num"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/btn_red_news2"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="10dp"/>


        </RelativeLayout>


        <!--<TextView-->
            <!--android:id="@+id/tv_setting"-->
            <!--android:text="@string/setting"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="15sp"-->
            <!--android:layout_marginTop="16dp"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_width="50dp"-->
            <!--android:gravity="center"-->
            <!--android:layout_height="30dp"/>-->
        <ImageView
            android:id="@+id/tv_setting"
            android:src="@mipmap/btn_grzxsz"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:scaleType="center"
            android:layout_width="35dp"
            android:layout_height="30dp"
           />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/back_333333"
        android:background="@color/back_ffffff"
        android:text="@string/my_asset"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/back_ffffff"
        android:layout_marginTop="0.1dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="-26dp"
                android:id="@+id/ll_managed_funds">
                <TextView
                    android:id="@+id/tv_managed_funds"
                    android:text="0.00"
                    style="@style/moneyStyle"/>
                <TextView
                    android:text="@string/managed_funds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="#333"
                    android:textSize="12sp"/>
            </LinearLayout>
            <View
                android:background="@drawable/dashed"
                android:layerType="software"
                android:layout_width="53dp"
                android:layout_marginRight="-26dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/ll_get_rebate"
                android:layout_height="match_parent"
                android:layout_marginRight="-26dp"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:text="0.00"
                    android:id="@+id/tv_get_rebate"
                    style="@style/moneyStyle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/get_the_rebate"
                    android:textColor="#333"
                    android:textSize="12sp"/>
            </LinearLayout>
            <View
                android:background="@drawable/dashed"
                android:layerType="software"
                android:layout_width="53dp"
                android:layout_marginRight="-26dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/ll_wallet_balance"
            android:layout_height="match_parent">
                <TextView
                    android:text="0.00"
                    android:id="@+id/tv_wallet_balance"
                    style="@style/moneyStyle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/wallet_balance"
                    android:textColor="#333"
                    android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_my_decorate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/back_ffffff"
        android:paddingLeft="16dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:drawablePadding="22dp"
        android:textColor="@color/back_333333"
        android:drawableRight="@mipmap/right_arrow"
        android:drawableLeft="@mipmap/btn_wdzx"
        android:text="@string/my_decorate"/>

    <TextView
        android:id="@+id/tv_my_order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/back_ffffff"
        android:paddingLeft="16dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:drawablePadding="22dp"
        android:textColor="@color/back_333333"
        android:drawableRight="@mipmap/right_arrow"
        android:drawableLeft="@mipmap/btn_wddd"
        android:text="@string/my_order"/>
    <TextView
        android:id="@+id/tv_account_security"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/back_ffffff"
        android:paddingLeft="16dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:drawablePadding="22dp"
        android:textColor="@color/back_333333"
        android:drawableRight="@mipmap/right_arrow"
        android:drawableLeft="@mipmap/btn_setting_2"
        android:text="@string/account_security"/>

</LinearLayout>