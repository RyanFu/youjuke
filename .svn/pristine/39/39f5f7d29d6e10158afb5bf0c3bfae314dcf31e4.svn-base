<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/linearLayout6"
        android:layout_alignEnd="@+id/linearLayout6"
        android:src="@mipmap/btn_close"
      />

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/rect_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:weightSum="1"
        android:layout_below="@+id/imageView_close"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:background="@drawable/half_rect_gray"
            android:textColor="@color/back_ffffff"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:text="您的购买机会用完了!"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:text="分享好友,成功购买"
            android:textStyle="bold"
            android:textColor="@color/back_333333"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="#00c051"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="即可再次获取购买机会"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/back_333333"
            android:layout_gravity="center"
            android:text="(最多3次机会)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="立即分享"
            android:id="@+id/button_commit"
            android:textColor="@color/back_ffffff"
            android:background="@drawable/bg_login_buttun"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="17dp"
            android:textSize="16sp"
            android:layout_marginRight="30dp"
            android:layout_height="33dp" />

        <TextView
            android:id="@+id/textView_buy"
            android:layout_marginTop="13dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_bg_green_stroke"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:text="土豪直接买"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0.07"
            tools:ignore="InefficientWeight" />

    </LinearLayout>

</RelativeLayout>