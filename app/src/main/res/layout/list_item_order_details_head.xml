<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/head_type1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:visibility="gone"
        android:background="@mipmap/top_bg1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="9dp"
                android:text="@string/to_send_goods"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:src="@mipmap/btn_dfh"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/head_type2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@mipmap/top_bg1"
        android:orientation="horizontal">

        <LinearLayout
            android:paddingLeft="37dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1">

            <TextView
                android:id="@+id/tv_order_status_dfk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/to_payment"
                android:textColor="@color/white"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_order_status_dfk_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginRight="15dp"
                android:text="@string/close_time"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.32">

            <ImageView
                android:id="@+id/img_order_status_dfk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:src="@mipmap/btn_dfk"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <include layout="@layout/part_user_address"/>

    <View
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>