<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:src="@mipmap/btn_close"
        android:id="@+id/img_close"
        android:layout_alignRight="@+id/ll_chance_panel"
        android:layout_alignEnd="@+id/ll_chance_panel"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_chance_panel"
        android:layout_below="@id/img_close"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog_white"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="福利来啦"
            android:textSize="24sp"
            android:textColor="@color/text_00c04f"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/cccccc"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="0.5dp"/>

        <ImageView
            android:layout_marginBottom="15dp"
            android:id="@+id/iv_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_task_name"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/text_505050"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="18sp"
            android:id="@+id/tv_hint"
            android:textColor="@color/text_fe0133"
            android:layout_marginBottom="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_get_chance"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginBottom="18dp"
            android:background="@drawable/shape_btn_green_bg"
            android:layout_width="250dp"
            android:layout_height="45dp"/>

    </LinearLayout>

</RelativeLayout>