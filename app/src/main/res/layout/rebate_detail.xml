<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_f0f0f0">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back_f0f0f0">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/ctl_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="#00c264"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed|enterAlwaysCollapsed">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@color/back_fefcec">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收益将以实际结算为准"
                        android:textColor="@color/text_ff5200"
                        android:textSize="12sp"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@mipmap/btn_tongzhi"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:layout_marginTop="0.5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        tools:text="免息贷款合同"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/text_select"
                        android:id="@+id/tv_contract_one"
                        android:layout_height="35dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        tools:text="免息贷款合同"
                        android:textColor="@color/text_normal"
                        android:textSize="16sp"
                        android:id="@+id/tv_contract_two"
                        android:gravity="center"
                        android:layout_height="35dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/back_ffffff"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/expect_earnings"
                            android:textColor="#989898"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/tv_expect_earnings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            tools:text="1522.00"
                            android:textColor="@color/back_333333"
                            android:textSize="23sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/back_f0f0f0" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/real_earnings"
                            android:textColor="#989898"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_real_earnings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            tools:text="1522.00"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="#ff5200"
                            android:textSize="23sp" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/If_you_have_any_questions_please_check_capital_flowing_water"
                    android:gravity="center_vertical"
                    android:background="@drawable/back_fff_9fff"
                    android:drawablePadding="10dp"
                    android:textSize="12sp"
                    android:paddingLeft="112dp"
                    android:layout_marginTop="1dp"
                    android:id="@+id/tv_bill_detail"
                    android:textColor="#00c04f"
                    android:drawableLeft="@mipmap/btn_zjts"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/back_ffffff"
            android:paddingLeft="15dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/btn_lqfl"
            android:gravity="center_vertical"
            android:textColor="@color/back_333333"
            android:textSize="16sp"
            android:text="领取我的返利"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fefece"
            android:textColor="#ff5200"
            android:textSize="12sp"
            android:id="@+id/tv_commence_data"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="1dp"/>
       <!-- <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:orientation="vertical"
            android:background="#fefece"
            android:paddingLeft="15dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/system_did_not_query_to_the_starting_time_cannot_calculate_the_rebate_issue_date_of_each_plan"
                android:textColor="#ff5200"
                android:textSize="12sp"
                android:id="@+id/tv_commence_data"
                android:layout_marginBottom="2dp"
                android:background="#fefece"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rebate_issue_start_date_is_usually_30_days_after_completion_of_payment_to_the_businessman"
                android:textColor="#ff5200"
                android:textSize="12sp"
                android:background="#fefece"/>
        </LinearLayout>-->


    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_recycler_view"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@android:color/transparent"
        android:overScrollMode="never"
        android:fadeScrollbars="false">
    </android.support.v7.widget.RecyclerView>


</android.support.design.widget.CoordinatorLayout>
