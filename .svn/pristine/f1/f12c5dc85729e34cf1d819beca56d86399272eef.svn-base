<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_close"
        android:layout_width="wrap_content"
        android:layout_alignRight="@+id/cardView"
        android:layout_alignEnd="@+id/cardView"
        android:layout_height="wrap_content"
        android:background="@mipmap/btn_close" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_close"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_txfkbg" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="换购商品您已购买\n请直接付款"
                android:textColor="@color/back_333333"
                android:textSize="17sp" />

            <Button
                android:id="@+id/button_commit"
                android:layout_width="200dp"
                android:layout_height="33dp"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_login_buttun"
                android:text="去付款"
                android:textColor="@color/back_ffffff"
                android:textSize="16sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>