<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_top_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="你别不相信他在100㎡里装出了四室二厅美得我都想结婚了"
                android:textColor="@color/color_323232"
                android:textSize="13sp"/>

            <ImageView
                android:id="@+id/image_viewed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_top_news_title"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:src="@mipmap/btn_view"/>

            <TextView
                android:id="@+id/tv_top_news_viewed_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/image_viewed"
                android:layout_marginBottom="-2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/image_viewed"
                android:includeFontPadding="false"
                android:text="10W"
                android:textColor="@color/c_979797"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tv_top_news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/image_viewed"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="-2dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="2017.02.16"
                android:textColor="@color/c_979797"
                android:textSize="10sp"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_top_news_decoration"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/home_on"/>
    </LinearLayout>

    <View
        android:background="@color/c_dcdcdc"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>